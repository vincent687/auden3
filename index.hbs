{{!< default}}

<div class="container-fluid wrapper">
  <section class="section">
    <div class="row">
      <div class="col-xs">
        {{> rolling-banner
          image_tag_name="rolling-banner-image"
          post_tag_name="rolling-banner-post"
          color="primary"
        }}
      </div>
    </div>
  </section>
  <div class="row">
    <div class="col-xs-12 col-lg-8 col-xl-9">
      <section class="section all-posts">
        <div class="row posts">
          {{#foreach posts from="1" visibility="all"}}
            <div class="col-xs-12 post-wrap">
              {{> post-card}}
            </div>
          {{/foreach}}
        </div>
        <div class="row">
          <div class="col-xs-12 center-xs">
            <button id="load-more-posts" class="btn btn--wide btn--brand btn--bordered">
              {{t "Load more posts"}}
            </button>
          </div>
        </div>
      </section>
    </div>
    <div class="col-xs col-lg-4 col-xl-3 has-sidebar">
      {{> sidebar}}
    </div>
  </div>
</div>
