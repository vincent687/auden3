{{!-- Site header --}}
<header class="header">
  {{#is "post"}}<div id="progress"></div>{{/is}}
  <div class="header__top">
    <div class="container-fluid wrapper">
      <div class="row between-xs middle-xs">
        <div class="col-xs col-md">
          {{!-- Blog logo or name --}}
          <div class="header__brand">
            <a href="{{@site.url}}">
              {{#if @site.logo}}
              <img class="header__logo" src="{{@site.logo}}" alt="{{@site.title}}">
              {{else}}
              <h3 class="header__title">{{@site.title}}</h3>
              {{/if}}
            </a>
          </div>
        </div>

        <div class="end-xs middle-xs is-flex p-r-md">
          {{!-- Search --}}
          <div class="header__search">
            <a class="header__search--open" id="search-open" tabindex="0" title="{{t "Search"}}"
              aria-label="{{t "Search"}}">
              {{>icon name="search" size=""}}
            </a>
          </div>
          <a href="/subscribe" class="header__bottom header__subscribe"><span>{{t "Subscribe"}}</span></a>
          {{!-- Menu Button --}}
          <button id="menu-open" class="header__menu--open hamburger" type="button" title="{{t "Menu"}}"
            aria-label="{{t "Menu"}}">
            <span></span>
          </button>
        </div>
      </div>
    </div>
  </div>

  {{!-- Menu --}}
  <div class="header__bottom">
    <div class="container-fluid wrapper">
      <div class="row">
        {{!-- Blog navigation --}}
        <nav class="col-xs header__nav">
          {{navigation area="header"}}
        </nav>
        {{> language-switch}}
      </div>
    </div>
  </div>
</header>