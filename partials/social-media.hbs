{{!-- Social Media Links --}}
<div class="social-links">
  {{!-- Facebook --}}
  <a class="social-links__item facebook"
     href="{{facebook_url}}" target="_blank" title="Facebook"
     aria-label="Facebook" rel="noreferrer">
    {{>icon name="facebook"}}
    <p>Facebook</p>
  </a>
  {{!-- Twitter --}}
