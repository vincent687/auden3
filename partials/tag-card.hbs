<a href="{{url}}" title="{{name}}" aria-label="{{name}}" class="tag-card tag-{{slug}}">
  {{#if feature_image}}
    <img class="lazyload tag-card__image"
      data-srcset="{{img_url feature_image size="s"}} 300w,
              {{img_url feature_image size="m"}} 600w"
      data-sizes="(max-width: 600px) 25vw, 400px"
      data-src="{{img_url feature_image size="m"}}"
      src="{{asset 'images/img-placeholder-sm.jpg'}}"
      alt="{{name}}"
    />
  {{/if}}
  <div class="tag-card__content">
    {{#locale_string name}}<h4 class="tag-card__name">{{display}}</h4>{{/locale_string}}
  </div>
</a>